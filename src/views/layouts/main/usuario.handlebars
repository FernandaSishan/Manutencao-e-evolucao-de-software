<div>
    <div class="m-4 p-3">
        <div class="d-flex flex-row  justify-content-between">
            <a class="btn btn-outline-success fw-bolder" href="/usuario/criar">Novo Usuário</a>

            <form class="d-flex flex-row" action="/usuario" method="post">
                <select class="form-select w-40 mx-1" name="tipoReq" id="tipo">
                    <option value="nome">Nome</option>
                    <option value="login">Login</option>
                    <option value="todos">Todos</option>
                </select>
                <input type="text" class="form-control" name="busca" placeholder="Pesquisar por usuário" id="inputBusca" required>
                <button class=" btn btn-outline-primary mx-1" type="submit" >Buscar</button>
            </form>  
        </div>

        <div class="h-100">
            <table id="usuarios" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Login</th>
                        <th>Email</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{{mostrarUsuarios usuarios}}}
                </tbody>
            </table>
            <div class="py-2  text-center text-danger fw-medium">
                {{{error}}}
            </div>
            <div class="py-2  text-center text-success fw-medium">
                {{{mensage}}}
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="confirmaDelecao" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Confirmação de Deleção</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Confirma a deleção do usuario: <em class="fw-medium text-warning" id="usuarioModal" ></em>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger fw-medium" data-bs-dismiss="modal">Cancelar</button>
                    <a type="submit" class="btn btn-outline-success fw-medium">Confirmar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script defer src="/js/jquery.js"></script>
<script defer src="/js/dataTables.js"></script>
<script defer src="https://cdn.datatables.net/2.0.3/js/dataTables.bootstrap5.js"></script>
<script defer src="/js/dataTableT.js"></script>
<script defer src="/js/userPage.js"></script>
 